@{
    ViewData["Title"] = "Inserir Questões Avaliação Trilho";
}
@{
    Layout = "_LayoutInserirQuestoes";
}

<!-- asp-action="Insert":referencía a acção Insert  -->
<form asp-action="Criar" method="post">
    <div class="panel panel-primary" style="margin-top:2ex;">
        <div class="panel-heading">
            <h3 class="panel-title">Inserir Questões Avaliação Trilho</h3>
        </div>

        <div class="panel-body">

            <div class="bs-docs-section">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Questão</th>
                                        <th>Acções</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Classifique globalmente este trilho (1 Mau - 5 Excelente):</td>
                                        <td><button type="button" class="btn btn-warning">Editar</button>&nbsp<button type="button" class="btn btn-danger">Apagar</button></td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>O trilho continha sinalização adequada?</td>
                                        <td><button type="button" class="btn btn-warning">Editar</button>&nbsp<button type="button" class="btn btn-danger">Apagar</button></td>
                                    </tr>
                                    <tr class="table-info">
                                        <td>3</td>
                                        <td>Como classifica este trilho quanto ao grau de dificuldade (1 Muito Fácil - 5 Muito Difícil)?</td>
                                        <td><button type="button" class="btn btn-warning">Editar</button>&nbsp<button type="button" class="btn btn-danger">Apagar</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div><!-- /example -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-4">
                    <input type="text" class="form-control" placeholder="Introduzir nova questão">
                </div>
                <div class="col-xs-2">
                    <button type="button" class="btn btn-primary">Adicionar</button>
                </div>

            </div>


            @*<div class="form-group">
                    <label asp-for="Desativado">Estado Trilho:</label>
                    <select asp-for="Desativado" class="form-control">
                        <option value="">Escolha opção</option>
                        <option value="true">Desativado</option>
                        <option value="false">Ativado</option>
                    </select>
                </div>*@

            <!-- to display validation errors to the user -->
            <div asp-validation-summary="All"></div>
        </div>



        <div class="panel-footer">
            <!-- botão submete para esta acção (form) -->
            <button type="submit" class="btn btn-primary">Guardar Alterações</button>
        </div>
    </div>
</form>
